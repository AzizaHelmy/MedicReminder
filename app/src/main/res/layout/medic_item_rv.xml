<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_medic"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="16dp"
            tools:srcCompat="@drawable/img_medicine" />

        <TextView
            android:id="@+id/tv_medic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:fontFamily="monospace"
            android:text="Tuskkan"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/img_medic"
            app:layout_constraintTop_toTopOf="@id/img_medic" />

        <TextView
            android:id="@+id/tv_strngth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="serif-monospace"
            android:text="500 mg"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/tv_medic_name"
            app:layout_constraintTop_toTopOf="@id/img_medic" />

        <TextView
            android:id="@+id/tv_refill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="1 left"
            app:layout_constraintEnd_toEndOf="@id/img_medic"
            app:layout_constraintStart_toStartOf="@id/img_medic"
            app:layout_constraintTop_toBottomOf="@id/img_medic" />

        <TextView
            android:id="@+id/tv_adder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="20dp"
            android:text="added by Azza"
            app:layout_constraintBottom_toBottomOf="@id/img_medic"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>